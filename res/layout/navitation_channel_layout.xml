<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/navigation_background"
    android:orientation="vertical" xmlns:app="http://schemas.android.com/apk/res/im.afterclass.android">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.73"
        android:gravity="center"
        android:orientation="vertical" >

        <im.afterclass.android.widget.CircleImageView
            android:id="@+id/head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/hugh" 
            app:border_width="2dp"
            app:border_color="#000000"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <TextView
                android:id="@+id/myorgactivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="等级"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/orgnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="成长"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/activitynum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/navitationlist"
        android:layout_width="fill_parent"
        android:layout_height="254dp"
        android:layout_weight="0.20"
        android:cacheColorHint="#00000000"
        android:divider="@drawable/listdivider"
        android:listSelector="@drawable/title_list_selector"
        android:padding="3dp"
        android:scrollingCache="true" >

    </ListView>

</LinearLayout>